// Place your settings in this file to overwrite the default settings
{
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "GitHub Dark",
    "editor.rulers": [
        79
    ],
    "editor.roundedSelection": false,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 100,
    "editor.renderWhitespace": "boundary",
    "editor.renderIndentGuides": true,
    "editor.suggestSelection": "first",
    // "editor.fontWeight": "600",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "window.zoomLevel": -1,
    "python.linting.pylintEnabled": true,
    "python.linting.pep8Enabled": false,
    "python.pythonPath": "/usr/local/bin/python3",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
    ],
    "git.autofetch": true,
    "terminal.integrated.rendererType": "dom",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.keymap": "alternate",
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "terminal.integrated.shellArgs.osx": [],
    "gitlens.views.repositories.location": "gitlens",
    "gitlens.views.fileHistory.location": "gitlens",
    "gitlens.views.lineHistory.location": "gitlens",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "editor.largeFileOptimizations": false,
    "gistpad.playgrounds.layout": "splitLeft",
    "editor.renderControlCharacters": false,
    "intelephense.diagnostics.undefinedTypes": false,
    "intelephense.diagnostics.undefinedMethods": false,
    "intelephense.diagnostics.undefinedConstants": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.gitCommands.closeOnFocusOut": true,
    "vscode-json-editor.theme": "dark",
    "editor.formatOnSave": true,
    "todo-tree.tree.showScanModeButton": false,
    "git.allowNoVerifyCommit": true,
    "editor.fontFamily": "'Fira Code', Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "liquid.format": false,
    "zenMode.fullScreen": false,
    "window.restoreFullscreen": true,
    "workbench.editor.wrapTabs": true,
    "diffEditor.renderSideBySide": false,
    "intelephense.diagnostics.run": "onSave",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "stylelint.packageManager": "yarn",
    "css.lint.argumentsInColorFunction": "ignore",
    "css.lint.emptyRules": "ignore",
    "css.lint.hexColorLength": "ignore",
    "css.lint.fontFaceProperties": "ignore",
    "css.lint.propertyIgnoredDueToDisplay": "ignore",
    "css.lint.unknownAtRules": "ignore",
    "css.lint.unknownProperties": "ignore",
    "css.lint.vendorPrefix": "ignore",
    "css.validate": false,
    "emmet.includeLanguages": {
        "twig": "html"
    },
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
}